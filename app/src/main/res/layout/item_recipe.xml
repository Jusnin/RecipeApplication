<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Image for the recipe -->
    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        android:contentDescription="Recipe Image" />

    <!-- Vertical layout for recipe name and type -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Recipe Name -->
        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface" /> <!-- Use the color from your theme -->

        <!-- Recipe Type -->
        <TextView
            android:id="@+id/recipe_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe Type"
            android:textSize="14sp"
            android:textColor="?attr/colorSecondary" /> <!-- Use a secondary or subdued color from your theme -->
    </LinearLayout>

</LinearLayout>
